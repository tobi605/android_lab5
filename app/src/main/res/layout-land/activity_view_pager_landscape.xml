<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_pager_land"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/landscape_text"
        android:text="@string/landscape_text"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/landscape_image"
        android:src="@drawable/landscape"
        android:layout_below="@id/landscape_text"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/landscape_image_desc" />

</RelativeLayout>